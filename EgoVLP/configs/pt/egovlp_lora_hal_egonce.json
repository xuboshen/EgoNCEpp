{
    "name": "EgoClip_4f",
    "n_gpu": 8,
    "arch": {
        "type": "EgoVLP_lora",
        "args": {
            "video_params": {
                "model": "SpaceTimeTransformer",
                "arch_config": "base_patch16_224",
                "num_frames": 4,
                "pretrained": true,
                "time_init": "zeros"
            },
            "load_checkpoint": "pretrained/egovlp.pth",
            "text_params": {
                "model": "distilbert-base-uncased",
                "pretrained": true,
                "input": "text"
            },
            "lora_params": {
                "lora_r": 16,
                "lora_alpha": 16,
                "lora_dropout": 0
            },
            "projection": "minimal"
        }
    },
    "data_loader":
            [
                {
                    "type": "MultiDistTextVideoDataLoader",
                    "args":{
                        "dataset_name": "EgoClip_lora",
                        "data_dir": "/fs/fast/base_path/data/ego4d/down_scale/",
                        "meta_dir": "/fs/fast/base_path/annotations/egovlpv3",
                        "reader": "decord_start_end_fastchunk",
                        "shuffle": true,
                        "num_workers": 16,
                        "batch_size": 72,
                        "split": "train",
                        "subsample": "mcq",
                        "text_params": {
                            "input": "text"
                        },
                        "video_params": {
                            "input_res": 224,
                            "num_frames": 4,
                            "loading": "lax",
                            "egonce": true
                        },
                        "neg_param": true,
                        "trainset_name": "hal_egoclip_123K.csv",
                        "neg_num": 7
                    }
                }
            ],
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 3e-5
        }
    },
    "loss": {
        "type": "EgoNCE_hal",
        "args": {
        }
    },
    "metrics": [
        "egomcq_accuracy_metrics"
     ],
    "trainer": {
        "epochs": 10,
        "max_samples_per_epoch": 10000,
        "save_dir": "results/EgoVLPv3_egonce_via_lora_trying",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss_0",
        "early_stop": 10,
        "init_val": false,
        "neptune": false
    },
    "visualizer": {
        "type": ""
    }

}
